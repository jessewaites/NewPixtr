<h2><%= @group.name %></h2>

<% if signed_in? %>
  <% if current_user.member?(@group) %>
    <%= button_to "Leave Group",
      leave_group_path(@group),
      method: :delete %>
  <% else %>
    <%= button_to "Join Group", join_group_path(@group) %>
  <% end %>

  <% if current_user.likes? @group %>
    <%= button_to "Unlike", unlike_group_path(@group), method: :delete %>
  <% else %>
    <%= button_to "Like", like_group_path(@group) %>
  <% end %>
<% end %>

<%= render @images %>
