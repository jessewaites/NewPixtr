<h2>New image</h2>

<%= form_for [@gallery, @image] do |form| %>
  <%= render "form_errors", target: @image %>

  <div>
    <%= form.text_field :name, placeholder: "Name" %>
  </div>
  <div>
    <%= form.text_field :description, placeholder: "Description" %>
  </div>
  <div>
    <%= form.text_field :url, placeholder: "URL" %>
  </div>
  <div class="field">
  <%= form.label :tag_list, "Tags (separated by commas)" %><br />
  <%= form.text_field :tag_list %>
  </div>
  <div>
    <%= form.submit "Create image" %>
  </div>
<% end %>
